@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login | ICL</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/components.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/login.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>

    @Scripts.Render("~/bundles/vendors")
    <script src="https://code.angularjs.org/1.5.0/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.5/angular-material.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-block-ui/0.2.2/angular-block-ui.min.css" />
    <link href="~/Content/alertify.core.css" rel="stylesheet" />
    <link href="~/Content/alertify.default.css" rel="stylesheet" />

    <script src="~/Scripts/jk-rating-stars.min.js" type="text/javascript"></script>
    @*<script src="~/Scripts/ui-bootstrap-tpls-1.3.3.min.js" type="text/javascript"></script>*@
    <script src="~/SPA/app.js"></script>
    <script src="~/Scripts/alertify.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-block-ui/0.2.2/angular-block-ui.min.js"></script>
    <script src="~/Scripts/dirPagination.js" type="text/javascript"></script>
    <script src="~/SPA/LoginController.js"></script>
</head>
<body class=" login" ng-app="csmApp" ng-controller="LoginController">
    <div class="logo" title="Website">
        <a href="https://www.infinigent.co/" target="_blank"><img src="~/Content/img/logo.png" style="height:280px;width:280px" alt="Logo" /></a>
    </div>
    <div class="content" ng-controller="LoginController" style="margin-top: 5px">
        <form class="login-form" name="loginForm" ng-submit="Login()" novalidate>
            <h3 class="form-title font-red">Welcome, Please login</h3>
            <div class="alert alert-danger alert-dismissible" ng-show="loginFailAlert">
                {{loginFailMessage}}
            </div>
            <div class="form-group" ng-class="{ 'has-error' : loginForm.username.$invalid && loginForm.username.$touched }">
                <div class="input-icon" title="Username">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" name="username" ng-model="user.Username" maxlength="51" ng-maxlength="50" placeholder="Username" required autofocus />
                </div>
                <span class="help-block" ng-if="loginForm.username.$error.required && loginForm.username.$touched">Username is required</span>
                <span class="help-block" ng-if="loginForm.username.$error.maxlength">50 Character Max</span>
            </div>
            <div class="form-group" ng-class="{ 'has-error' : loginForm.password.$invalid && loginForm.password.$touched }">
                <div class="input-icon" title="Password">
                    <i class="glyphicon glyphicon-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" name="password" ng-model="user.Password" maxlength="21" ng-maxlength="20" placeholder="Password" required />
                </div>
                <span class="help-block" ng-if="loginForm.password.$error.required && loginForm.password.$touched">Password is required</span>
                <span class="help-block" ng-if="loginForm.password.$error.maxlength">20 Character Max</span>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn red" id="btnSubmit" ng-disabled="loginForm.$invalid" style="width:100%">Login</button>
            </div>
            @*<pre>{{user | json}}</pre>*@
        </form>
    </div>
    <div class="copyright"> 2020 © IMS V1.0.0.0 </div>
</body>
</html>